{% extends "library_base.html" %}


{% block content_section %}

    {% if media_filters %}
        {% include "library_media_filters.html.j2" %}
    {% endif %}

    {% if media %}
        <ul id="media" class="media">
            {% for item in media %}

                {% set item_link = "/library/" + item.library_name.lower() + "/" + item.id|string + "/" %}
                {% set item_image_src = "/thumbnail/" + item.poster_path %}
                {% set item_meta_text_1 = item.title %}
                {% set item_meta_text_2 = item.release_date[:4] %}
                {% set item_not_available = False %}
                
                {% include "components/poster-meta-text.html.j2" %}

            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}